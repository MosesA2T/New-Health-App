<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/splashscreen"
        android:label="@string/app_name"
        android:roundIcon="@drawable/splashscreen"
        android:supportsRtl="true"
        android:theme="@style/Theme.Loyaltyy"
        tools:targetApi="31">
        <activity
            android:name="com.example.ToDoList.Splashscreen"
            android:exported="true"
            android:theme="@style/SplashscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.ToDoList.AddTaskActivity" />
        <activity android:name="com.example.ToDoList.MainActivity" />
        <activity android:name="com.example.ToDoList.LoginActivity" />
        <activity android:name="com.example.ToDoList.RegisterActivity" />
        <activity android:name="com.example.ToDoList.UpdateTaskActivity" />
    </application>

</manifest>